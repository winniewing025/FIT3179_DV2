{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "data": {
    "url": "crops_state.csv"
  },
  "params": [
    {
      "name": "crop_selector",
      "value": "paddy",
      "bind": {
        "input": "select",
        "options": [
          "cash_crops",
          "coconut",
          "flower",
          "fruits",
          "herbs",
          "industrial_crops",
          "paddy",
          "spices",
          "vegetables"
        ],
        "name": "Select Crop Type: "
      }
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "filter": "datum.crop_type == crop_selector"
        }
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "sort": "-x",
          "axis": {
            "labelFontSize": 12,
            "titleFontSize": 14
          }
        },
        "x": {
          "field": "production",
          "type": "quantitative",
          "title": "Total Production (tonnes)",
          "axis": {
            "labelFontSize": 12,
            "titleFontSize": 14
          }
        },
        "tooltip": [
          {
            "field": "state",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "crop_type",
            "type": "nominal",
            "title": "Crop Type"
          },
          {
            "field": "planted_area",
            "type": "quantitative",
            "title": "Planted Area",
            "format": ",.1f"
          },
          {
            "field": "production",
            "type": "quantitative",
            "title": "Production",
            "format": ",.1f"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "datum.crop_type == crop_selector"
        },
        {
          "aggregate": [{"op": "mean", "field": "production", "as": "avg_production"}]
        }
      ],
      "mark": {
        "type": "rule",
        "color": "blueviolet",
        "strokeWidth": 2,
        "strokeDash": [5, 5]
      },
      "encoding": {
        "x": {
          "field": "avg_production",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.crop_type == crop_selector"
        },
        {
          "aggregate": [{"op": "mean", "field": "production", "as": "avg_production"}]
        }
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "dx": 0,
        "dy": -210,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "blueviolet"
      },
      "encoding": {
        "x": {
          "field": "avg_production",
          "type": "quantitative"
        },
        "text": {
          "value": "Average"
        }
      }
    }
  ]
}
