{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "data": {
    "url": "crops_state_malaysia.csv"
  },
  "params": [
    {
      "name": "year_select",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [2017, 2018, 2019, 2020, 2021, 2022],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.crop_type !== 'flower'"
    },
    {
      "calculate": "year(datum.date)",
      "as": "year"
    },
    {
      "filter": {"field": "year", "equal": {"expr": "year_select"}}
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "production",
          "as": "total_production"
        }
      ],
      "groupby": ["crop_type"]
    },
    {
      "window": [{"op": "sum", "field": "total_production", "as": "grand_total"}],
      "frame": [null, null]
    },
    {
      "calculate": "datum.total_production / datum.grand_total * 100",
      "as": "percentage"
    }
  ],
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 60, "stroke": "#fff"},
      "encoding": {
        "theta": {
          "field": "total_production",
          "type": "quantitative",
          "title": "Production"
        },
        "color": {
          "field": "crop_type",
          "type": "nominal",
          "title": "Crop Type",
          "scale": {
            "domain": ["paddy", "fruits", "vegetables", "industrial_crops", "cash_crops", "coconut", "spices", "herbs"],
            "range": ["#2E5A88", "#E69F00", "#2D807A", "#CC79A7", "#F0E442", "#999999", "#4C78A8", "#7BAFD4"]
          }
        },
        "tooltip": [
          {"field": "crop_type", "type": "nominal", "title": "Crop Type"},
          {"field": "total_production", "type": "quantitative", "title": "Total Production", "format": ",.0f"},
          {"field": "percentage", "type": "quantitative", "title": "Percentage", "format": ".1f"}
        ]
      }
    },
    {
      "transform": [
        {
          "aggregate": [{"op": "sum", "field": "total_production", "as": "overall_total"}]
        }
      ],
      "mark": {
        "type": "text",
        "fontSize": 16,
        "fontWeight": "bold",
        "color": "#1b4b72"
      },
      "encoding": {
        "text": {
          "field": "overall_total",
          "type": "quantitative",
          "format": ".2s"
        }
      }
    },
    {
      "transform": [
        {
          "aggregate": [{"op": "sum", "field": "total_production", "as": "overall_total"}]
        }
      ],
      "mark": {
        "type": "text",
        "fontSize": 13,
        "dy": 20,
        "color": "#415a77"
      },
      "encoding": {
        "text": {
          "value": "Total Production"
        }
      }
    }
  ]
}
